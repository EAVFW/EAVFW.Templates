{
  "$schema": "http://json.schemastore.org/template",
  "author": "Thyge Steffensen",
  "classifications": [
    "Common",
    "Library"
  ],
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "identity": "EAVFW-NextJS",
  "name": "EAV Framework",
  "shortName": "eavfw-nextjs",
  "symbols": {
    "namespace": {
      "description": "The namespace used for the solution, projects. Remember to use the same as from dotnet new eavfw",
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "EAVFW",
      "replaces": "__EAVFW__",
      "FileRename": "__EAVFW__",
      "isRequired": true
    },
    "appName": {
      "description": "The App name, like Portal. Namespace.Portal",
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "MainApp",
      "replaces": "__MainApp__",
      "FileRename": "__MainApp__",
      "isRequired": true
    },
    "skipNpmInstall": {
      "type": "parameter",
      "description": "Wether to run NPM install",
      "datatype": "bool",
      "defaultValue": "false",
      "isRequired": false
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.vs/**",
        "**/.idea/**",
        "**/node_modules/**",
        "**/.git/**"
      ]
    }
  ],
  "postActions": [
    {
      "description": "Manual actions required",
      "manualInstructions": [
        {
          "text": "scripts/gencert.cmd"
        }
      ],
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "args": {
        "executable": "scripts/gencert.cmd",
        "args": ""
      },
      "continueOnError": true
    }
